[behave]
# Behave configuration for Semker API tests

# Output format
default_format = pretty
show_timings = true
show_skipped = false

# Test discovery
paths = tests/features
step_registry = tests/features/steps

# Logging
log_capture = false
logging_level = INFO

# Tags
default_tags = ~@skip

# Color output
color = true

# Summary
summary = true
